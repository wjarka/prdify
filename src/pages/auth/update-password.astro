---
import Layout from "@/layouts/Layout.astro";
import { UpdatePasswordForm } from "@/components/auth/UpdatePasswordForm";
---

<Layout title="Aktualizacja hasła" description="Ustaw nowe hasło do swojego konta PRDify" variant="auth">
  <div class="space-y-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold tracking-tight">Ustaw nowe hasło</h2>
      <p class="text-sm text-muted-foreground">Wprowadź nowe hasło do swojego konta</p>
    </div>

    <UpdatePasswordForm client:load />
  </div>
</Layout>
