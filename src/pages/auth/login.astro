---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";

// Note: Zalogowani użytkownicy są automatycznie przekierowywani przez middleware
// Middleware sprawdza czy użytkownik jest zalogowany i przekierowuje na /
---

<Layout title="Logowanie" description="Zaloguj się do swojego konta PRDify" variant="auth">
  <div class="space-y-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold tracking-tight">Zaloguj się</h2>
      <p class="text-sm text-muted-foreground">Wprowadź swoje dane, aby uzyskać dostęp do konta</p>
    </div>

    <LoginForm client:load />
  </div>
</Layout>
