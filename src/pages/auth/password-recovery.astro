---
import Layout from "@/layouts/Layout.astro";
import { PasswordRecoveryForm } from "@/components/auth/PasswordRecoveryForm";
---

<Layout title="Odzyskiwanie hasła" description="Zresetuj hasło do swojego konta PRDify" variant="auth">
  <div class="space-y-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold tracking-tight">Zapomniałeś hasła?</h2>
      <p class="text-sm text-muted-foreground">Wyślemy Ci link do resetowania hasła na podany adres e-mail</p>
    </div>

    <PasswordRecoveryForm client:load />
  </div>
</Layout>
